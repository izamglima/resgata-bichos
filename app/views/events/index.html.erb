<%= render :partial => 'layouts/header' %>

<main>
  <section class="steps-cadastro final hidden">
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p id="notice"><%= notice %></p>
    </div>
    <div class="container"> 
        <h2>Cadastro feito com sucesso!</h2>
        <section class="steps-cadastro">
          <div class="container">   
            <ol class="row">
              <li class="col col-md-3">Dados do animal</li>
              <li class="col col-md-3">Imagens do animal</li>
              <li class="col col-md-3">Local do evento</li>
              <li class="col col-md-3">Pronto!</li>
            </ol>
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                100% Completos
              </div>
            </div>
          </div>
        </section>
    </div>
  </section>
  <section class="index-events">
    <div class="container">

      <p id="notice"><%= notice %></p>

      <h1>Events</h1>

      <table>
        <thead>
          <tr>
            <th>Dataevent</th>
            <th>Status</th>
            <th>Resolved</th>
            <th>Comment</th>
            <th>Place</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.data_event %></td>
              <td><%= event.status %></td>
              <td><%= event.resolved %></td>
              <td><%= event.comment %></td>
              <td><%= event.place %></td>
              <td><%= link_to 'Show', animal_event_path(params[:animal_id], event) %></td>
              <td><%= link_to 'Edit', edit_animal_event_path(params[:animal_id], event) %></td>
              <td><%= link_to 'Destroy', animal_event_path(params[:animal_id], event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Event', new_animal_event_path %>
    </div>
  </section>
</main>

