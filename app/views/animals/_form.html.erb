<%= form_for(animal) do |f| %>
  <% if animal.errors.any? %>
	<div id="error_explanation" class="alert alert-danger alert-dismissible" role="alert">
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	  <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>
	  <ul>
	  <% animal.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	  <% end %>
	  </ul>
	</div>
  <% end %>
  <div class="field" data-toggle="tooltip">
		<%= f.label :name, "Nome" %>
		<%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field" data-toggle="tooltip">
		<%= f.label :type, "Tipo" %>
		<%= select_tag(:type, options_for_select([['Cão', 'Cão'], ['Gato', 'Gato']], '1'), class: "form-control")%>
  </div>

  <div class="field" data-toggle="tooltip" id="dogs-list">
		<%= f.label :race, "Raça" %>
		<%= select_tag(:race, options_for_select([['Selecione a raça', '0'], ['Affenpinscher', 'Affenpinscher'], ['Afghan Hound', 'Afghan Hound'], ['Airedale Terrier', 'Airedale Terrier']], '0'), class: "form-control")%>
  </div>

  <div class="field hidden" data-toggle="tooltip" id="cats-list">
		<%= f.label :race, "Raça" %>
		<%= select_tag(:race, options_for_select([['Selecione a raça', '0'], ['Abissínio', 'Abissínio'], ['Bengal', 'Bengal'], ['Persa', 'Persa']], '0'), class: "form-control")%>
  </div>

  <div class="field" data-toggle="tooltip">
		<%= f.label :color, "Cor" %>
		<%= f.text_field :color, class: "form-control" %>
  </div>

  <div class="field ">
		<%= f.label :status %>
		<%= f.text_field :status, :value => params[:status], :disabled => true, class: "form-control"  %>
  </div>

  <div class="actions">
	<%= f.submit "Próximo passo", class: "btn-secundario btn-validate" %>
  </div>

<% end %>
