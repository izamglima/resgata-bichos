<%= render :partial => 'layouts/header' %>

<main>
    <section class="show-animal">
        <div class="container">
            <div id="error_explanation" class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <p id="notice"><%= notice %></p>
            </div>
            <h1><%= @animal.name %></h1>
            <div class="show-animal-container">
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 box-infos">
                        <h3>Dados do animal</h3>
                        <div>
                            <h4>Tipo: </h4>
                            <p><%= @animal.animal_type %></p>
                        </div>
                        <div>
                            <h4>Raça: </h4>
                            <p><%= @animal.race %></p>
                        </div>
                        <div>
                            <h4>Cor: </h4>
                            <p><%= @animal.color %></p>
                        </div>
                        <div>
                            <h4>Gênero: </h4>
                            <p><%= @animal.sex %></p>
                        </div>
                        <div>
                            <h4>Idade: </h4>
                            <p><%= @animal.age %></p>
                        </div>
                        <div>
                            <h4>Porte: </h4>
                            <p><%= @animal.size %></p>
                        </div>
                        <h3>+ Informações do caso</h3>
                        <div> 
                            <% @animal.events.each do |event| %>
                            <div>
                                <h4>Data do caso: </h4>
                                <p><%= event.data_event %></p>
                            </div>
                            <div>
                                <h4>Endereço: </h4>
                                <p><%= event.address %></p>
                            </div>
                            <div>
                                <h4>Status: </h4>
                                <p><%= event.status %></p>
                            </div>
                            <div>
                                <h4>Comentário: </h4>
                                <p><%= event.comment %></p>
                            </div>
                            <input type="hidden" name="latitude" id="lat" value="<%= event.latitude %>">
                            <input type="hidden" name="longitude" id="long" value="<%= event.longitude %>">
                        <% end %>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12 box-img">
                    <h3>Imagem</h3>
                    <ul>
                        <% @animal.images.each do |image| %>
                            <li><img class="img-responsive" src="<%= image.image.url %>"></li>
                        <% end %>
                    </ul>
                </div>
                <div class="col-md-5 col-sm-12 col-xs-12">
                    <h3>Localização</h3>
                    <div id="mapholder"></div>
                </div>
                <div class="col-md-5 pull-right">
                    <h3>Comentários</h3>
                </div>
            </div>
            <div class="separator"></div>
            <% unless current_user.blank? %>
                <% if (@animal.user_id == current_user.id) %>
                    <%= link_to 'Editar', edit_animal_path(@animal) %> |
                <% end %>    
            <% end %>
            <%= link_to 'Voltar', animals_path %>
        </div>  
    </section>
</main>