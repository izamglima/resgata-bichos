<%= render :partial => 'layouts/header' %>

<main>
  <section class="show-animal">
    <div class="container">
		<div id="error_explanation" class="alert alert-success alert-dismissible" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<p id="notice"><%= notice %></p>
		</div>

	<div class="show-animal-container">
		<div>
			<h3>Tipo</h3>
        	<p><%= @animal.animal_type %></p>
      	</div>
      	<div>
      		<h3>Nome</h3>
        	<p><%= @animal.name %></p>
      	</div>
      	<div>
      		<h3>Raça</h3>
        	<p><%= @animal.race %></p>
      	</div>
      	<div>
      		<h3>Cor</h3>
        	<p><%= @animal.color %></p>
      	</div>
      	<div>
      		<h3>Gênero</h3>
        	<p><%= @animal.sex %></p>
        </div>
        <div>
      		<h3>Idade</h3>
        	<p><%= @animal.age %></p>
        </div>
        <div>
      		<h3>Porte</h3>
        	<p><%= @animal.size %></p>
        </div>
		<ul>
		  <% @animal.images.each do |image| %>
		  	<li>
		  		<img src="<%= image.image.url %>">
		  	</li>
		  <% end %>
		</ul>
		<ul>
		  <% @animal.events.each do |event| %>
		  	<li>
		  		<p><%= event.address %></p>
		  	</li>
        <li><p><%= event.status %></p></li>
		  <% end %>
		</ul>
	</div>
		<%= link_to 'Editar', edit_animal_path(@animal) %> |
		<%= link_to 'Voltar', animals_path %>
    </div>  
  </section>
</main>