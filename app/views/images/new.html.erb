<%= render :partial => 'layouts/header' %>
<main>
	<div class="alert alert-success alert-dismissible" role="alert">
	    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	    <p id="notice"><%= notice %></p>
	</div>
    <section class="steps-cadastro">
	    <div class="container">   
	      <ol class="row">
	        <li class="col col-md-3">Dados do animal</li>
	        <li class="col col-md-3">Imagens do animal</li>
	        <li class="col col-md-3">Local do evento</li>
	        <li class="col col-md-3">Pronto!</li>
	      </ol>
	      <div class="progress">
	        <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">
	          50% Completos
	        </div>
	      </div>
	    </div>
    </section>
    <section class="new-animal">
	    <div class="container">
	    	<div class="form-container">
				<h2>Nova imagem</h2>			
				<%= render 'form', animal: @animal, image: @image %>
				<%= link_to 'Back', animal_images_path %>
			</div>
	    </div>  
	</section>
</main>